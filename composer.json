{
    "name": "viettuans/laravel-file-manager",
    "description": "A modern, extensible Laravel file manager package with image processing, validation, and flexible storage options",
    "keywords": [
        "laravel",
        "file-manager", 
        "media-library",
        "image-processing",
        "upload",
        "storage",
        "intervention-image"
    ],
    "homepage": "https://github.com/viettuanit/laravel-file-manager",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Viet Tuan",
            "email": "viet.tuan.9210@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "illuminate/contracts": "^9.0|^10.0|^11.0",
        "illuminate/database": "^9.0|^10.0|^11.0",
        "illuminate/http": "^9.0|^10.0|^11.0",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "illuminate/validation": "^9.0|^10.0|^11.0",
        "intervention/image": "^2.7|^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0",
        "phpunit/phpunit": "^9.5|^10.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Viettuans\\FileManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Viettuans\\FileManager\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Viettuans\\FileManager\\FileManagerServiceProvider"
            ],
            "aliases": {
                "FileManager": "Viettuans\\FileManager\\Facades\\FileManager"
            }
        }
    }
}
